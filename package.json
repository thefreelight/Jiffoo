{
  "name": "jiffoo-mall-core",
  "version": "0.2.3",
  "description": "Jiffoo Mall Core - Private development repository with full features",
  "workspaces": [
    "apps/api",
    "apps/admin",
    "apps/shop",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev --filter=api --filter=shop --filter=admin --filter=super-admin --concurrency=5",
    "dev:core": "dotenv -e .env -- turbo run dev --filter=api --filter=shop --filter=admin --filter=super-admin --concurrency=5",
    "dev:cloud": "dotenv -e .env -- turbo run dev --filter=api --filter=shop --filter=admin --filter=super-admin --filter=docs --concurrency=6",
    "dev:minimal": "turbo run dev --filter=api --filter=shop --concurrency=2",
    "dev:api-only": "dotenv -e .env -- pnpm --filter api dev",
    "dev:shop-only": "dotenv -e .env -- pnpm --filter shop dev",
    "dev:admin-only": "dotenv -e .env -- pnpm --filter admin dev",
    "dev:super-admin-only": "dotenv -e .env -- pnpm --filter super-admin dev",
    "dev:docs-only": "dotenv -e .env -- pnpm --filter docs dev",
    "dev:packages": "turbo run dev --filter='./packages/**' --concurrency=8",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=api --filter=shop --filter=admin --filter=super-admin",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:api": "pnpm --filter api dev",
    "dev:shop": "pnpm --filter shop dev",
    "dev:setup": "npx tsx scripts/dev-setup.ts",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:studio": "pnpm --filter api db:studio",
    "db:reset": "pnpm --filter api db:reset",
    "db:seed": "pnpm --filter api db:seed",
    "test": "turbo run test",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:private": "playwright test --config=tests/e2e/playwright.private.config.ts",
    "test:e2e:all": "playwright test --config=tests/e2e/playwright.private.config.ts",
    "test:e2e:shop": "playwright test --config=tests/e2e/playwright.config.ts --project=shop",
    "test:e2e:admin": "playwright test --config=tests/e2e/playwright.config.ts --project=admin",
    "test:e2e:api": "playwright test --config=tests/e2e/playwright.config.ts --project=api",
    "test:e2e:super-admin": "playwright test --config=tests/e2e/playwright.private.config.ts --project=super-admin",
    "test:e2e:developer-portal": "playwright test --config=tests/e2e/playwright.private.config.ts --project=developer-portal",
    "test:e2e:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:report:private": "playwright show-report playwright-report/private",
    "docker:build": "turbo run docker:build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy": "turbo run deploy",
    "prepare": "husky"
  },
  "keywords": [
    "fastify",
    "typescript",
    "mall",
    "ecommerce"
  ],
  "author": "Jiffoo Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.9.0",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^4.1.1",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "stripe": "18.4.0",
      "react": "19.2.1",
      "react-dom": "19.2.1"
    }
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "stripe": "^18.2.1"
  }
}
