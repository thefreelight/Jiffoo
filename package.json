{
  "name": "jiffoo-mall",
  "version": "0.2.2",
  "description": "Open Source E-commerce Platform with Plugin Architecture (GPLv2+)",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/shop",
    "apps/tenant",
    "apps/admin",
    "apps/agent",
    "apps/white-label",
    "apps/distribution-plugin",
    "apps/docs-internal",
    "apps/docs-public",
    "packages/*"
  ],
  "scripts": {
    "dev:minimal": "turbo run dev --filter=api --filter=shop --concurrency=2",
    "dev:api-only": "dotenv -e .env -- pnpm --filter api dev",
    "dev:shop-only": "dotenv -e .env -- pnpm --filter shop dev",
    "dev:admin-only": "dotenv -e .env -- pnpm --filter admin dev",
    "dev:packages": "turbo run dev --filter='./packages/**' --concurrency=8",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:api": "pnpm --filter api dev",
    "dev:shop": "pnpm --filter shop dev",
    "dev:all": "echo '\u26a0\ufe0f  \u6269\u5c55\u5e94\u7528\u5df2\u88ab\u6ce8\u91ca\uff0c\u5982\u9700\u542f\u52a8\u8bf7\u5148\u53d6\u6d88\u6ce8\u91ca pnpm-workspace.yaml \u4e2d\u7684\u76f8\u5173\u5e94\u7528'",
    "dev:all-with-extensions": "echo '\u9700\u8981\u5148\u5728 pnpm-workspace.yaml \u4e2d\u53d6\u6d88\u6ce8\u91ca\u6269\u5c55\u5e94\u7528\uff0c\u7136\u540e\u8fd0\u884c pnpm install'",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:studio": "pnpm --filter api db:studio",
    "db:reset": "pnpm --filter api db:reset",
    "db:seed": "pnpm --filter api db:seed",
    "test": "turbo run test",
    "docker:build": "turbo run docker:build",
    "deploy": "turbo run deploy",
    "prepare": "husky"
  },
  "keywords": [
    "fastify",
    "typescript",
    "mall",
    "ecommerce"
  ],
  "author": "Jiffoo Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^4.1.1",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "stripe": "18.4.0"
    }
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "stripe": "^18.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thefreelight/Jiffoo.git"
  },
  "homepage": "https://github.com/thefreelight/Jiffoo"
}
