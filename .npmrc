# pnpm configuration for monorepo compatibility
# Use hoisted node_modules for better compatibility with Next.js and Prisma
node-linker=hoisted

# Shamefully hoist all dependencies to root node_modules
# This is necessary for Next.js and Prisma to work correctly in monorepos
shamefully-hoist=true

# Automatically install peer dependencies
auto-install-peers=true

# Don't fail on peer dependency conflicts
strict-peer-dependencies=false

# Enable symlink resolution for workspace packages
symlink=true

# Ensure all dependencies are properly linked
link-workspace-packages=true
