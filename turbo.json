{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true,
    "signature": false
  },
  "globalDependencies": [".env", "**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "LOG_LEVEL",
    "DATABASE_URL",
    "REDIS_URL",
    "API_PORT",
    "API_HOST",
    "CORS_ORIGIN",
    "CORS_ENABLED",
    "JWT_SECRET",
    "JWT_EXPIRES_IN",
    "API_SERVICE_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_ADMIN_URL",
    "NEXT_PUBLIC_SUPER_ADMIN_URL",
    "NEXT_PUBLIC_SHOP_URL",
    "STRIPE_SECRET_KEY",
    "STRIPE_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "RESEND_API_KEY",
    "RESEND_WEBHOOK_SECRET"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "build#api": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build#shop": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build#admin": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build#super-admin": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build#docs-public": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:reset": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "docker:build": {
      "dependsOn": ["build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "Dockerfile*",
        "docker-compose*.yml",
        "../../package.json",
        "../../pnpm-lock.yaml",
        "../../pnpm-workspace.yaml"
      ],
      "env": [
        "DOCKER_REGISTRY",
        "IMAGE_TAG"
      ]
    },
    "deploy": {
      "dependsOn": ["docker:build"],
      "cache": false,
      "env": [
        "KUBECONFIG",
        "KUBE_NAMESPACE"
      ]
    }
  }
}
