{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/core/*": [
        "./src/core/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "shared/logger": [
        "../../packages/shared/dist/src/logger/index"
      ],
      "shared/logger/*": [
        "../../packages/shared/dist/src/logger/*"
      ],
      "@shared/security": [
        "../../packages/shared/dist/src/security/index"
      ],
      "@shared/security/*": [
        "../../packages/shared/dist/src/security/*"
      ],
      "@shared/observability": [
        "../../packages/shared/dist/src/observability/index"
      ],
      "@shared/observability/*": [
        "../../packages/shared/dist/src/observability/*"
      ],
      "@jiffoo/shared": [
        "../../packages/shared/dist/index"
      ]
    },
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "../../packages/shared/src/logger/**/*.browser.ts",
    "../../packages/shared/src/logger/adapters/browser-adapter.ts",
    "../../packages/shared/src/logger/adapters/adapter-factory.ts",
    "../../packages/shared/src/logger/transports/remote-transport.ts",
    "../../packages/shared/src/logger/transports/transport-factory.ts",
    "../../packages/shared/src/logger/transports/console-transport.ts",
    "../../packages/shared/src/logger/formatters.ts"
  ]
}