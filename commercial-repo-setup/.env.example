# Jiffoo Mall Commercial Environment Configuration

# License Server Configuration
LICENSE_SERVER_URL=https://api.jiffoo.com
LICENSE_JWT_SECRET=your-license-jwt-secret-here
LICENSE_ENCRYPTION_KEY=your-encryption-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/jiffoo_commercial
REDIS_URL=redis://localhost:6379

# Payment Provider Configuration
# WeChat Pay Pro
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_MCH_ID=your-wechat-merchant-id
WECHAT_API_KEY=your-wechat-api-key

# Alipay Pro
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

# Stripe Pro
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Enterprise Auth Configuration
# SAML
SAML_CERT_PATH=/path/to/saml/cert.pem
SAML_PRIVATE_KEY_PATH=/path/to/saml/private.key

# LDAP
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-password

# Email Marketing Pro
SENDGRID_API_KEY=your-sendgrid-api-key
MAILCHIMP_API_KEY=your-mailchimp-api-key
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# SMS Marketing
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SaaS Services Configuration
# Customer Service Cloud
OPENAI_API_KEY=your-openai-api-key
CHATBOT_MODEL=gpt-4

# Marketing Automation
ANALYTICS_API_KEY=your-analytics-api-key
TRACKING_DOMAIN=track.yourdomain.com

# Supply Chain Management
ERP_API_URL=https://api.your-erp.com
ERP_API_KEY=your-erp-api-key

# Enterprise Features
# Multi-tenant
TENANT_DATABASE_PREFIX=tenant_
TENANT_REDIS_PREFIX=tenant:

# White-label
CDN_URL=https://cdn.yourdomain.com
ASSETS_BUCKET=your-s3-bucket

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
METRICS_ENDPOINT=https://metrics.yourdomain.com

# Development
NODE_ENV=development
DEBUG=jiffoo:*
